            <Border Grid.Row="3" Grid.Column="0" Style="{StaticResource GridPatchesBorderLeft}"/>

            <TextBlock x:Name="TextBlockLoadscreens" Grid.Column="0" Grid.Row="3" Style="{StaticResource GridPatchesText}">            
